{
  "manifest_version": 3,
  "name": "Gmail Smart Cleaner",
  "version": "1.0.0",
  "description": "Safe Gmail inbox cleaner with smart organization and 30-second undo",
  "permissions": [
    "identity",
    "identity.email",
    "storage"
  ],
  "host_permissions": [
    "https://www.googleapis.com/gmail/v1/*"
  ],
  "action": {
    "default_title": "Gmail Smart Cleaner",
    "default_icon": {
      "16": "src/images/icon-16.svg",
      "48": "src/images/icon-48.svg",
      "128": "src/images/icon-128.svg"
    }
  },
  "background": {
    "service_worker": "src/js/background.js"
  },
  "oauth2": {
    "client_id": "300402790441-p4ln082frlp5dbp9rls3ks1eine48suf.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.modify",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "icons": {
    "16": "src/images/icon-16.svg",
    "48": "src/images/icon-48.svg",
    "128": "src/images/icon-128.svg"
  }
}
